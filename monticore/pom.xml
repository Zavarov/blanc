<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <parent>
        <artifactId>root</artifactId>
        <groupId>zav.discord.blanc</groupId>
        <version>5.0.0-SNAPSHOT</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>monticore</artifactId>

    <properties>
        <generator.models.path>${project.basedir}/src/main/models</generator.models.path>
        <generator.resources.path>${project.basedir}/src/main/templates</generator.resources.path>
        <generator.classes.path>${project.build.directory}/classes-resources</generator.classes.path>
        <generator.templates.path>${project.build.directory}/templates-resources</generator.templates.path>
    </properties>

    <!-- == Dependencies ==================================================== -->

    <dependencies>
        <!-- Numbers -->
        <dependency>
            <groupId>zav.mc</groupId>
            <artifactId>numbers</artifactId>
            <version>${cd4code.version}</version>
        </dependency>

        <dependency>
            <groupId>zav.mc</groupId>
            <artifactId>numbers</artifactId>
            <classifier>${grammars.classifier}</classifier>
            <version>${cd4code.version}</version>
            <optional>true</optional>
        </dependency>

        <!-- CD4Code -->
        <dependency>
            <groupId>zav.mc</groupId>
            <artifactId>cd4code</artifactId>
            <version>${cd4code.version}</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>zav.mc</groupId>
            <artifactId>cd4code</artifactId>
            <version>${cd4code.version}</version>
            <classifier>${grammars.classifier}</classifier>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>zav.mc</groupId>
            <artifactId>cd4code</artifactId>
            <version>${cd4code.version}</version>
            <classifier>${templates.classifier}</classifier>
            <optional>true</optional>
        </dependency>

        <!-- Core -->
        <dependency>
            <groupId>zav.discord.blanc</groupId>
            <artifactId>core</artifactId>
            <version>${project.version}</version>
            <!-- MontiCore has a hard dependency on Guava 25.1-JRE -->
            <exclusions>
                <exclusion>
                    <groupId>com.google.guava</groupId>
                    <artifactId>guava</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- MontiCore dependency -->
        <dependency>
            <groupId>de.monticore</groupId>
            <artifactId>monticore-grammar</artifactId>
            <classifier>${grammars.classifier}</classifier>
            <version>${monticore.version}</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>de.monticore</groupId>
            <artifactId>monticore-grammar</artifactId>
            <version>${monticore.version}</version>
            <optional>true</optional>
        </dependency>

        <dependency>
            <groupId>de.monticore</groupId>
            <artifactId>monticore-runtime</artifactId>
            <version>${monticore.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!-- MontiCore Generation -->
            <plugin>
                <groupId>de.monticore.mojo</groupId>
                <artifactId>monticore-maven-plugin</artifactId>
                <version>${monticore.version}</version>
                <executions>
                    <execution>
                        <configuration>
                            <script>de/monticore/monticore_noemf.groovy</script>
                        </configuration>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <!-- Create Grammar Jar -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <executions>
                    <!-- grammars -->
                    <execution>
                        <id>generate-grammars</id>
                        <phase>package</phase>
                        <goals>
                            <goal>jar</goal>
                        </goals>
                        <configuration>
                            <classifier>${grammars.classifier}</classifier>
                            <classesDirectory>src/main/grammars</classesDirectory>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>